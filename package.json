{
  "name": "r2",
  "version": "2.4.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prestart": "rimraf dist && tsc",
    "start": "node ./dist | node ./dist/transport",
    "test": "npm run cov && cat ./coverage/lcov.info | coveralls",
    "jest": "jest --runInBand",
    "cov": "jest --runInBand --coverage",
    "clearPairs": "ts-node ./tools/clearPairs.ts",
    "getBalance": "ts-node ./tools/getBalance.ts",
    "closeCcPosition": "ts-node ./tools/closeCcPosition.ts",
    "closeBfPosition": "ts-node ./tools/closeBfPosition.ts",
    "closeQuPosition": "ts-node ./tools/closeQuPosition.ts",
    "closeBbPosition": "ts-node ./tools/closeBbPosition.ts",
    "closeAll": "npm run closeCcPosition && npm run closeBfPosition && npm run closeQuPosition && npm run closeBbPosition && npm run clearPairs && npm run getBalance"
  },
  "dependencies": {
    "@bitr/awaitable-event-emitter": "^1.0.3",
    "@bitr/bitbankcc": "^1.0.5",
    "@bitr/bitflyer-fx": "^1.0.4",
    "@bitr/btcbox": "^1.0.3",
    "@bitr/castable": "^1.0.3",
    "@bitr/logger": "^1.0.1",
    "bindings": "^1.5.0",
    "chalk": "^4.1.0",
    "core-decorators": "^0.20.0",
    "date-fns": "^2.16.1",
    "decimal.js": "^10.2.1",
    "express": "^4.16.2",
    "fast-json-parse": "^1.0.3",
    "i18next": "^19.8.4",
    "inversify": "^5.0.5",
    "jsonwebtoken": "^8.5.1",
    "level": "^6.0.1",
    "leveldown": "^5.6.0",
    "liquid-tap": "^0.3.5",
    "lodash": "^4.17.20",
    "luxon": "^1.25.0",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.1",
    "npm": "^6.14.11",
    "opn": "^6.0.0",
    "pino": "^6.11.0",
    "qs": "^6.9.6",
    "reflect-metadata": "^0.1.13",
    "simple-statistics": "^7.4.0",
    "split2": "^3.2.2",
    "uuid": "^8.3.2",
    "ws": "^7.4.2",
    "zeromq": "^6.0.0-beta.6"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/decimal.js": "^7.4.0",
    "@types/express": "^4.17.11",
    "@types/i18next": "^13.0.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.168",
    "@types/luxon": "^1.25.1",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.14.21",
    "@types/node-fetch": "^2.5.8",
    "@types/opn": "^5.1.0",
    "@types/pino": "^6.3.5",
    "@types/split2": "^2.1.6",
    "@types/through2": "^2.0.36",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.4.0",
    "@types/zeromq": "^4.5.3",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.test\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "mapCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!src/index.ts",
      "!src/transport/index.ts",
      "!src/analytics/index.ts",
      "!src/container.config.ts",
      "!**/__tests__/**",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!tools/**",
      "!webui/**"
    ]
  }
}
